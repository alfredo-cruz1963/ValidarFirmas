<div class="container p-5">
    <div class="row">
        <div class="col-sm-4 offset-md-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6>Digite Planilla</h6>
                </div>
                <div class="card-body">
                    <form action="/querys/list" method="POST">
                        <div class="form-group ">
                            Planilla
                            <input type="text" class="form-control" name="planilla" placeholder="Planilla"
                            title="Recibe solo numeros" pattern="^([0-9]){1,6}$" autofocus required>
                        </div>
                        <div class="card-body">
                            <button type="submit" class="btn btn-info float-right">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>