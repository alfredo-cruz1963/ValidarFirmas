<div class="container mt-1">
  <div class="col-md-12 mx-auto">
    <div class="card ">
      <div class="card-body">
        <div class="table-responsive">
          <table id="table-produccion" class="table table-striped table-bordered mt-3" style="width:100%">
            <thead style="background-color: #337ab7">
              <tr style="color: white !important">
                <td style="font-size:80%;"><strong>Usuario</strong></td>
                <td style="font-size:80%;"><strong>Nombre</strong></td>
                <td style="font-size:80%;"><strong>Total</strong></td>
              </tr>
            </thead>
            <tbody>
              {{#if datos }}
              {{#each datos }}
              <tr>
                <td style="font-size:80%;">{{usuario }}</td>
                <td style="font-size:80%;">{{nombre }}</td>
                <td style="font-size:80%;">{{total }}</td>
              </tr>
              {{/each }}
              {{/if }}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div